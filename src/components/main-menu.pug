mixin main-menu(mod)
  nav(class='main-menu main-menu--' + mod)
    ul.main-menu__list
      //- -var menu = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться']
      //- each item in menu 
      li.main-menu__item
        a(href="#main-section").main-menu__link Главная
      li.main-menu__item
        a(href="#about-section").main-menu__link Обо мне
      li.main-menu__item
        a(href="#skills-section").main-menu__link Навыки
      li.main-menu__item
        a(href="#works-section").main-menu__link Работы
      li.main-menu__item
        a(href="#reviews").main-menu__link Отзывы
      li.main-menu__item
        a(href="#contact-section").main-menu__link Связаться