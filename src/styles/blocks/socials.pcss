.socials__list{
  display: flex;
}
.socials__item{
  margin-right: 20px;
}
.socials__link{
  fill: white;
  opacity: .25;
  &:hover{
     opacity: 1;
  }
}
.socials-link{
  width: 25px;
  height: 25px;
  
}
.socials__list--footer{
  .socials__item{
    width:50px;
    height: 50px;
    border: 1px solid;
    border-radius: 50%;
    .socials__link{
      width:100%;
      height:100%;
      display: block;
      position: relative;
      .socials-link{
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%,-50%);
        transform: translate(-50%,-50%);
      }
    }
    &:hover{
      border:1px solid white;
    }
  }
}
