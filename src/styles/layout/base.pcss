.container-footer {
  display: flex;
  justify-content: space-between;
  @include phones {
    flex-direction: column;
  }
}
.myWorks-container {
  @include phones {
    width: 100%;
  }
}
.text {
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  color: $text-color;
  @include tablets {
    font-size: 14px;
  }
}
.title {
  font-size: 36px;
  font-weight: 700;
  color: white;
  @include phones {
    font-size: 26px;
  }
}

.maincontent__autumn-bg {
  background: url("../images/content/background-autumn.png");
  background-size: cover;
  padding: 160px 0px;
  padding-right: 25%;
  position: relative;
  &:before {
    content: "";
    content: "";
    background: url("../images/content/leafs.png");
    width: 36.15rem;
    height: 88.5rem;
    position: absolute;
    right: 0;
    background-size: cover;
    background-position: 95%;
    top: -140px;
    z-index: 0;
  }
  @include desktop {
    padding: 10rem 10% 10rem 0;
  }
  @include tablets {
    padding-right: 0;
    &:before {
      content: "";
      background: url("../images/content/leafs.png");
      width: 24.15rem;
      height: 58.5rem;
      position: absolute;
      right: -115px;
      background-size: cover;
      background-position: 95%;
      top: -0.75rem;
    }
  }
  @include phones {
    background: url("../images/content/background-autumn-mobile.png");
    background-size: cover;
    &:before {
      display: none;
    }
  }
}
.flickity-viewport {
  width: 100%;
}
.noScroll {
  overflow: hidden;
}
